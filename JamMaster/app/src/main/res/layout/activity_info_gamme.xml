<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoGamme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <Spinner
                android:id="@+id/spinnerNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinnerMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="I"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="II"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="III"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="IV"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="V"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="VI"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:text="VII"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/degres1"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/degres2"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="2"/>
                <TextView
                    android:id="@+id/degres3"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="3"/>
                <TextView
                    android:id="@+id/degres4"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="4"/>
                <TextView
                    android:id="@+id/degres5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="5"/>
                <TextView
                    android:id="@+id/degres6"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="6"/>
                <TextView
                    android:id="@+id/degres7"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/tableborders"
                    android:layout_marginBottom="1dp"
                    android:text="7"/>

            </TableRow>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>